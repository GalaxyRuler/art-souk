    "@types/ws": "^8.5.10",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "supertest": "^6.3.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
